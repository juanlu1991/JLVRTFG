<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_dark"
    tools:context="com.jlvr.juanluis.tfg_championshipleague.ClasficacionFireBase.clasificacionFB"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <Button
        android:id="@+id/buttonOrdenarC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/buttonActualizar"
        tools:ignore="MissingConstraints"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintLeft_toRightOf="@+id/TituloC"
        android:layout_marginLeft="8dp"/>

    <LinearLayout
        android:id="@+id/clasificacion"
        android:layout_width="353dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/lstClasificacion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="-141dp"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@android:color/holo_blue_light"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="30dp"
        android:id="@+id/linearLayout"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/Texto">

        <LinearLayout
            android:layout_width="343dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/TnombreEquipo"
                android:layout_width="132dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Equipo"/>

            <TextView
                android:id="@+id/Tpuntos"
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Puntos"/>

            <TextView
                android:id="@+id/TPG"
                android:layout_width="29dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="PG"/>

            <TextView
                android:id="@+id/TPE"
                android:layout_width="34dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="PE"/>

            <TextView
                android:id="@+id/TPP"
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="PP"/>

            <TextView
                android:id="@+id/TPJ"
                android:layout_width="58dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="PJ"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/TituloC"
        android:layout_width="189dp"
        android:layout_height="42dp"
        android:layout_weight="1"
        android:ems="20"
        android:text="@string/clasificacion"
        android:textColor="#ffffffff"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-1dp"
        tools:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/Texto"
        android:layout_width="170dp"
        android:layout_height="46dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="-3dp"
        app:layout_constraintLeft_toRightOf="@+id/TituloC"
        android:layout_marginLeft="31dp">

    </LinearLayout>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal"/>
</android.support.constraint.ConstraintLayout>
